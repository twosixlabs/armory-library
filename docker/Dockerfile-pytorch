ARG base_image_tag
ARG armory_version
ARG armory_build_type


FROM twosixarmory/base:${base_image_tag} AS armory-local

WORKDIR /armory-repo

COPY ./ /armory-repo

RUN echo "Building Armory from local source"                            && \
    echo "Updating Base Image..."                                       && \
      python -m pip install --upgrade pip                               && \
    echo "Installing Armory..."                                         && \
      pip install --no-compile --no-cache-dir --editable '.[host]'      && \
    echo "Configuring Armory..."                                        && \
      armory configure --use-default                                    && \
    echo "Cleaning up..."                                               && \
      rm -rf /armory-repo

WORKDIR /workspace
